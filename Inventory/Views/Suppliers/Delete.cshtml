@model Inventory.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Supplier</title>
    <style>
        body {
            background-color: white;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            font-weight: bold;
            font-size: 30px;
            margin-top: 100px;
        }

        .container-box {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-container {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            font-size: 16px;
            width: 120px;
            margin: 0 10px;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-danger {
            font-size: 16px;
            background-color: #DC3545 !important;
            border-color: #DC3545 !important;
        }

            .btn-danger:hover {
                background-color: #C82333 !important;
                border-color: #C82333 !important;
            }

        .btn-secondary {
            font-size: 16px;
            background-color: #6C757D !important;
            border-color: #6C757D !important;
        }

            .btn-secondary:hover {
                background-color: #5A6268 !important;
                border-color: #545B62 !important;
            }
    </style>
</head>
<body>
    <h1>Delete Supplier</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="container-box">
                    <div class="form-container">
                        <h5>Are you sure you want to delete this supplier?</h5>

                        <div class="form-container">
                            <h6>Supplier Details</h6>
                            <hr />
                            <dl class="details-table">
                                <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                                <dd>@Html.DisplayFor(model => model.Name)</dd>
                                <dt>@Html.DisplayNameFor(model => model.ContactInfo)</dt>
                                <dd>@Html.DisplayFor(model => model.ContactInfo)</dd>
                            </dl>

                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

