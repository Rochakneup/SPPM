@model Inventory.Models.Supplier

@{
    ViewData["Title"] = "Add Supplier";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Supplier</title>
    <style>
        body {
            background-color: white;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            font-weight: bold;
            font-size: 30px;
            margin-top: 100px;
        }

        .table-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .custom-table-container {
            max-width: 100%;
            margin: 0 auto;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th, .table td {
                border: 1px solid #dee2e6;
                padding: 10px;
                text-align: left;
            }

        .form-control {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .button-group {
            text-align: center;
        }

        .btn {
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #0E9BA8 !important;
            border-color: #0E9BA8 !important;
            color: white;
            width: 100px;
            margin-right: 10px;
        }

            .btn-primary:hover {
                background-color: #0C8B97 !important;
                border-color: #0C8B97 !important;
                color: white;
            }

        .btn-secondary {
            background-color: #6c757d !important;
            border-color: #6c757d !important;
            color: white;
            width: 100px;
        }

            .btn-secondary:hover {
                background-color: #5a6268 !important;
                color: white;
            }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <h1>Add Supplier</h1>

    <div class="table-container">
        <form asp-action="Create" method="post" asp-validation-summary="ModelOnly">
            <div class="custom-table-container">
                <table class="table">
                    <tbody>
                        <tr>
                            <th><label asp-for="Name" class="font-weight-bold">Supplier Name</label></th>
                            <td>
                                <input asp-for="Name" class="form-control" placeholder="Enter supplier name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <th><label asp-for="ContactInfo" class="font-weight-bold">Contact Info</label></th>
                            <td>
                                <input asp-for="ContactInfo" class="form-control" placeholder="Enter contact info" />
                                <span asp-validation-for="ContactInfo" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="form-group button-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Suppliers" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }

</body>
</html>
