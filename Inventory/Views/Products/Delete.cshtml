@model Inventory.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}


<h1>Delete Product</h1>


<div class="table-container">
    <h3>Are you sure you want to delete this product?</h3>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="table-responsive custom-table-container">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th><label asp-for="Name" class="font-weight-bold">Product Name</label></th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th><label asp-for="Price" class="font-weight-bold">Price</label></th>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <th><label asp-for="ImageUrl" class="font-weight-bold">Image</label></th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-height: 100px;" class="img-thumbnail mb-2" />
                                <br />
                            }
                            else
                            {
                                <span>No image available</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th><label asp-for="SupplierId" class="font-weight-bold">Supplier</label></th>
                        <td>@Model.Supplier?.Name</td>
                    </tr>
                    <tr>
                        <th><label asp-for="Quantity" class="font-weight-bold">Quantity</label></th>
                        <td>@Model.Quantity</td>
                    </tr>
                    <tr>
                        <th><label asp-for="Description" class="font-weight-bold">Description</label></th>
                        <td>@Model.Description</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group button-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
        </div>
    </form>
</div>

<style>
    h1 {
        margin-top: 100px;
        text-align: center; 
    }

    h3 {
        margin-top: 20px;
        margin-bottom: 20px;
        text-align: center;
    }
    
    .table-container {
        position: relative;
        max-width: 800px;
        margin: 0 auto; 
        padding: 20px;
        background-color: #f8f9fa; 
        border: 1px solid #dee2e6; 
        border-radius: 5px; 
    }

    .custom-table-container {
        max-width: 100%; 
        margin: 0 auto; 
    }

    .form-group.button-group {
        text-align: center;
        margin-top: 20px; 
    }

    .btn-danger {
        font-size: 16px;
        background-color: #DC3545 !important;
        border-color: #DC3545 !important;
    }

        .btn-danger:hover {
            background-color: #C82333 !important;
            border-color: #C82333 !important;
        }

    .btn-secondary {
        font-size: 16px;
        background-color: #6C757D !important;
        border-color: #6C757D !important;
    }

        .btn-secondary:hover {
            background-color: #5A6268 !important;
            border-color: #545B62 !important;
        }
</style>
