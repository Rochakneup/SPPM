@model Inventory.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<div class="table-container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="table-responsive custom-table-container">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th><label asp-for="Name" class="font-weight-bold">Product Name</label></th>
                        <td><input asp-for="Name" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="Price" class="font-weight-bold">Price</label></th>
                        <td><input asp-for="Price" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="ImageUrl" class="font-weight-bold">Current Image</label></th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-height: 100px;" class="img-thumbnail mb-2" />
                                <br />
                            }
                            <input type="file" name="ImageFile" class="form-control-file mt-2" />
                        </td>
                    </tr>
                    <tr>
                        <th><label asp-for="SupplierId" class="font-weight-bold">Supplier</label></th>
                        <td>
                            <select asp-for="SupplierId" asp-items="ViewBag.SupplierId" class="form-control">
                                <option value="">-- Select Supplier --</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th><label asp-for="Quantity" class="font-weight-bold">Quantity</label></th>
                        <td><input asp-for="Quantity" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="Description" class="font-weight-bold">Description</label></th>
                        <td><textarea asp-for="Description" class="form-control"></textarea></td>
                    </tr>
                    <tr>
                        <th><label asp-for="CategoryId" class="font-weight-bold">Category</label></th>
                        <td>
                            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control">
                                <option value="">-- Select Category --</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group button-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    h1 {
        margin-top: 80px;
        text-align: center;
    }

    .table-container {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .custom-table-container {
        max-width: 100%;
        margin: 0 auto;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .form-group.button-group {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #0E9BA8 !important;
        border-color: #0E9BA8 !important;
        color: white;
        font-size: 16px;
        width: 100px;
        margin-right: 10px;
    }

        .btn-primary:hover {
            background-color: #0C8B97 !important;
            border-color: #0C8B97 !important;
            color: white;
        }

    .btn-secondary {
        background-color: #6c757d !important;
        border-color: #6c757d !important;
        color: white;
        font-size: 16px;
        width: 100px;
    }

        .btn-secondary:hover {
            background-color: #5a6268 !important;
            color: white;
        }
</style>
