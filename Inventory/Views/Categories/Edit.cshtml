@model Inventory.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<body>
    <h2>@ViewData["Title"]</h2>

    <div class="table-container">
        <form asp-action="Edit" method="post">
            <div class="table-responsive custom-table-container">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th><label asp-for="Name" class="font-weight-bold">Category Name</label></th>
                            <td>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <th><label asp-for="Description" class="font-weight-bold">Description</label></th>
                            <td>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group button-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
        <div class="validation-summary">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>

<style>
    body {
        background-color: white;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        font-size: 30px;
        margin-top: 100px;
    }

    .table-container {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 5px;
    }

    .custom-table-container {
        max-width: 100%;
        margin: 0 auto;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        padding: 15px;
    }

    .form-group.button-group {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #0E9BA8 !important;
        border-color: #0E9BA8 !important;
        color: white;
        font-size: 16px;
        width: 100px;
        margin-right: 10px;
    }

        .btn-primary:hover {
            background-color: #0C8B97 !important;
            border-color: #0C8B97 !important;
            color: white;
        }

    .btn-secondary {
        background-color: #6c757d !important;
        border-color: #6c757d !important;
        color: white;
        font-size: 16px;
        width: 100px;
    }

        .btn-secondary:hover {
            background-color: #5a6268 !important;
            color: white;
        }
</style>
