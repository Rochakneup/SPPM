@model Inventory.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create New Category</h1>

<div class="table-container">
    <form asp-action="Create" asp-validation-summary="ModelOnly">
        <div class="custom-table-container">
            <table class="table">
                <tbody>
                    <tr>
                        <th><label asp-for="Name" class="font-weight-bold">Category Name</label></th>
                        <td>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th><label asp-for="Description" class="font-weight-bold">Description</label></th>
                        <td>
                            <input asp-for="Description" class="form-control" placeholder="Enter description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group button-group">
            <button type="submit" class="btn btn-primary">Create</button>
           
                <a asp-action="Index" class="btn-back">Back</a>
            

           
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

