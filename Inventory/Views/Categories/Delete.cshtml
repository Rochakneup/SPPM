@model Inventory.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="container my-4">
    <div class="p-4 border rounded shadow-sm bg-white">
        <h3 class="text-center mb-4">Are you sure you want to delete this category?</h3>

        <div>
            <h4>Category Details</h4>
            <hr />
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 150px;">Name</th>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

<style>
    h1 {
        margin-top: 80px;
        text-align: center;
    }

    .container {
        max-width: 800px;
    }

    .p-4 {
        padding: 1.5rem !important; /* Adjust padding as needed */
    }

    .border {
        border: 1px solid #0E9BA8;
    }

    .rounded {
        border-radius: 10px;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .bg-white {
        background-color: #fff;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: left;
        padding: 8px;
    }

    .text-center {
        text-align: center;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .btn-danger {
        font-size: 16px;
        background-color: #DC3545 !important;
        border-color: #DC3545 !important;
    }

        .btn-danger:hover {
            background-color: #C82333 !important;
            border-color: #C82333 !important;
        }

    .btn-secondary {
        font-size: 16px;
        background-color: #6C757D !important;
        border-color: #6C757D !important;
    }

        .btn-secondary:hover {
            background-color: #5A6268 !important;
            border-color: #545B62 !important;
        }
</style>
