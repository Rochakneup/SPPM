@page
@using Inventory.Areas.Identity.Pages
@model AdminUserCreationModel
@{
}

@{
    ViewData["Title"] = "Create User";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <style>
        body {
            background-color: white;
        }

        h1 {
            text-align: center;
            font-weight: bold;
            font-size: 30px;
            margin-top: 100px;
        }

        .table-container {
            position: relative;
            max-width: 800px; 
            margin: 0 auto; 
            padding: 20px;
            background-color: #f8f9fa; 
            border-radius: 5px;
        }

        .custom-table-container {
            max-width: 100%; 
            margin: 0 auto;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
            padding: 15px;
        }

        .form-group.button-group {
            text-align: center;
            margin-top: 20px; 
        }

        .btn-primary {
            background-color: #0E9BA8 !important;
            border-color: #0E9BA8 !important;
            color: white;
            font-size: 16px;
            width: 100px;
            margin-right: 10px;
        }

            .btn-primary:hover {
                background-color: #0C8B97 !important;
                border-color: #0C8B97 !important;
                color: white;
            }

        .btn-secondary {
            background-color: #6c757d !important;
            border-color: #6c757d !important;
            color: white;
            font-size: 16px;
            width: 100px;
        }

            .btn-secondary:hover {
                background-color: #5a6268 !important;
                color: white;
            }
    </style>
</head>
<body>
    <h1>Create New User</h1>

    <div class="table-container">
        <form method="post">
            <div class="table-responsive custom-table-container">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th><label for="Input_FirstName" class="font-weight-bold">First Name</label></th>
                            <td><input type="text" id="Input_FirstName" name="Input.FirstName" class="form-control" placeholder="Enter your First name" required></td>
                        </tr>
                        <tr>
                            <th><label for="Input_LastName" class="font-weight-bold">Last Name</label></th>
                            <td><input type="text" id="Input_LastName" name="Input.LastName" class="form-control" placeholder="Enter your Last name" required></td>
                        </tr>
                        <tr>
                            <th><label for="Input_PhoneNumber" class="font-weight-bold">Phone number</label></th>
                            <td><input type="text" id="Input_PhoneNumber" name="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" required></td>
                        </tr>
                        <tr>
                            <th><label for="Input_Email" class="font-weight-bold">Email</label></th>
                            <td><input type="email" id="Input_Email" name="Input.Email" class="form-control" placeholder="Enter your email" required></td>
                        </tr>
                        <tr>
                            <th><label for="Input_Address" class="font-weight-bold">Address</label></th>
                            <td><input type="text" id="Input_Address" name="Input.Address" class="form-control" placeholder="Enter your address" required></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="form-group button-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Identity" asp-page="/Admin/UserActivity" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
